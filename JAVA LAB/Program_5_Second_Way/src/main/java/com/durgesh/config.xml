<?xml version="1.0" encoding="UTF-8"?>

<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
               
               
     <bean class="com.durgesh.Ticket" name="ticket" >
     <property name="customer" ref="cust" />
     <property name="ticketNumer" value="1RV20MC015" />
     <property name="source" value="Bhagalpur" />
     <property name="destination" value="Patna" />
     <property name="price" value="50000" />
     </bean>
     
     <bean class="com.durgesh.Customer" name="cust">
     	<property name="pname" value="Durgesh"/>
     	<property name="page" value="22" />
     
     </bean>
     
    
</beans>